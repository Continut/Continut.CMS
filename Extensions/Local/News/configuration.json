{
  "News": {
    "version": "0.0.1",
    "name": "News extension",
    "folder": "News",
    "type": "Local",
    "description": "Adds news functionality to the CMS",
    "author": {
      "web": "www.pixelplant.ch",
      "name": "Radu Mogo≈ü",
      "email": "radu.mogos@pixelplant.ch"
    },
    "dependencies": {
      "sys_backend": {
        "version": "0.0.1"
      }
    },
    "backend": {
      "mainMenu": {
        "extensionNews": {
          "label": "backend.news.header",
          "icon": "fa fa-fw fa-newspaper-o",
          "items": {
            "showAll": {
              "label": "backend.news.showAll",
              "icon": "fa fa-fw fa-bars",
              "extension": "News",
              "controller": "NewsBackend",
              "action": "index"
            },
            "addNew": {
              "label": "backend.news.createNew",
              "icon": "fa fa-fw fa-plus",
              "extension": "News",
              "controller": "NewsBackend",
              "action": "createNews"
            }
          }
        }
      }
    },
    "elements": {
      "plugins": {
        "news": {
          "label": "News plugin",
          "frontend": {
            "controller": "Index",
            "action": "index"
          },
          "backend": {
            "controller": "Preview",
            "action": "backendPreview"
          }
        }
      }
    }
  }
}